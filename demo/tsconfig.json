{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "es6",
            "dom"
        ],
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "skipLibCheck": false,
        "noEmitOnError": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        }
    },
    "exclude": [
        "lib",
        "hooks",
        "node_modules",
        "platforms"
    ]
}